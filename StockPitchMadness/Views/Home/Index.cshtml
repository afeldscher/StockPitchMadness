@model StockPitchMadness.ViewModels.Home

@{
    ViewBag.Title = "Stock Pitch Madness";
}


<div id="homeImage" class="bigImg">
    <div>
        <img id="homeLogo" src="~/Content/images/Logo_200.png" />
        <span id="subTitle">
            The premier student lead stock pitch competition.
        </span>
        <spam id="date">
            February 17-18, 2018
        </spam>
        <a id="applyBtnLink" href="https://spmdrexel.typeform.com/to/VKJxZ0" target="_blank">
            <div id="applyBtn" class="btn">
                Apply Now
            </div>
        </a>
    </div>
    <div id="downArrow" onclick="Stock.Home.scrollTo('#about');">
        <img src="~/Content/images/Arrow.png" />
    </div>
</div>

<div class="sec animation-element" id="about">
    @Html.Partial("AboutPartial")
</div>

<div class="sec animation-element" id="speakers">
    @Html.Partial("SpeakersPartial", Model.Speakers)
</div>

<div class="sec animation-element" id="schedule">
    @Html.Partial("SchedulePartial", Model.Schedules)
</div>

<div class="sec animation-element" id="sponsors">
    @Html.Partial("SponsorsPartial", Model.Sponsors)
</div>

<div class="sec animation-element" id="challenge">
    @Html.Partial("ChallengePartial")
</div>

<div class="sec animation-element" id="faq">
    @Html.Partial("FAQPartial", Model.Questions)
</div>

<div id="footer">
    @Html.Partial("FooterPartial")
</div>


@section scripts {
    <script>
        var home = new Stock.Home('@Url.Action("RestQuestions", "Home")');
        home.init();
    </script>




    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvO3M3ofJNmyyfEzkxOhyW7Mat8dOcQZY&callback=initMap"
            async defer> </script>

    <script>
        function initMap() {
            var map;
            var latlng = new google.maps.LatLng(39.955213, -75.188198)
            map = new google.maps.Map(document.getElementById('map'), {
                center: latlng,
                zoom: 18,
                scrollwheel: false
            });

            var marker = new google.maps.Marker({ // Set the marker
                position: latlng, // Position marker to coordinates
                map: map, // assign the market to our map variable
                title: 'LeBow College of Business' // Marker ALT Text
            });

            var infowindow = new google.maps.InfoWindow({ // Create a new InfoWindow
                content: '<b>LeBow College of Business</b><br>\
                          3220 Market St<br>\
                          Philadelphia, PA 19104<br>\
                          <a target="_blank" href="https://maps.google.com/maps?ll=39.955213,-75.188198&z=18&t=m&hl=en-US&gl=US&mapclient=apiv3&cid=3657902883847509630">\
                          View on Google Maps</a>'
            });

            google.maps.event.addListener(marker, 'click', function () { // Add a Click Listener to our marker
                infowindow.open(map, marker); // Open our InfoWindow
            });

        }
    </script>

}