@model List<StockPitchMadness.Models.Schedule>
<span class="secTitle">Schedule</span>


<div class="container">
    <div class="row schedule">
        @foreach (var schedule in Model)
        {
            <div class="col-md-6">
                <h2>@schedule.Date</h2>
                @foreach (var Event in schedule.Events)
                {
                    <div class="row vertAlign">
                        <div class="col-xs-4 time">
                            @Event.Time
                        </div>
                        <div class="col-xs-8 description">
                            @Event.Description
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</div>

