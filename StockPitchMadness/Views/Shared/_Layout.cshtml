<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="brandLinkContainer">
                    <a id="brandLink" onclick="Stock.Home.scrollTo('#homeImage');">
                        @*href="@Url.Action("Index", "Home")"*@
                        <img class="navbar-brand" src="~/Content/images/Logo_90.png" />
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="nav-link" onclick="Stock.Home.scrollTo('#about');">About</a></li>
                    <li><a class="nav-link" onclick="Stock.Home.scrollTo('#speakers');">Speakers</a></li>
                    <li><a class="nav-link" onclick="Stock.Home.scrollTo('#schedule');">Schedule</a></li>
                    <li><a class="nav-link" onclick="Stock.Home.scrollTo('#sponsors');">Sponsors</a></li>
                    <li><a class="nav-link" onclick="Stock.Home.scrollTo('#faq');">FAQ</a></li>
                    <li><a class="nav-link" onclick="Stock.Home.scrollTo('#contact');">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
